<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ボタンが押されていないときの定義 -->
    <item android:state_pressed="false">
        <shape
                android:shape="rectangle">
            <corners
                    android:radius="4dp"/>
            <gradient
                    android:startColor="@color/gradation_button_dark_color"
                    android:endColor="@color/gradation_button_light_color"
                    android:angle="0"/>
        </shape>
    </item>

    <!-- ボタンが押されているときの定義 -->
    <item android:state_pressed="true">
        <shape
                android:shape="rectangle">
            <corners
                    android:radius="4dp"/>
            <gradient
                    android:startColor="@color/gradation_button_dark_color"
                    android:endColor="@color/gradation_button_light_color"
                    android:angle="0"/>
        </shape>
    </item>
</selector>