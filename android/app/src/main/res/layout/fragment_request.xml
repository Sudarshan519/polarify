<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/document_introduction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.RequestFragment">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="25dp"
                    android:textColor="#555555"
                    android:text="顔写真"
                    android:textStyle="bold"
                    android:background="#F7F7F7"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">

                <!--取得した画像-->
                <ImageView
                        android:id="@+id/captured_photo_face"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="54dp"
                        android:layout_marginEnd="54dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/drive_license_frame_blue"/> <!-- srcは仮 -->
                <!--失敗画像の例-->
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/fail_pattern"/>
                <!--撮影し直すボタン-->
                <jp.co.polarify.onboarding.sdk.view.SafetyButton
                        android:id="@+id/selfie_retake_button_id"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:textSize="@dimen/button_font_size"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/request_retake_color"
                        android:text="@string/selfie_photo_retake"
                        android:background="@drawable/request_retake_button"
                        android:visibility="gone"/>
            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="25dp"
                    android:textColor="#555555"
                    android:text="本人確認書類"
                    android:textStyle="bold"
                    android:background="#F7F7F7"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">

                <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/oval_background"
                        android:text="@string/drive_license_front"
                        android:textColor="@color/white"/>
                <!--取得した画像-->
                <ImageView
                        android:id="@+id/captured_photo_license_front"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="54dp"
                        android:layout_marginEnd="54dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/drive_license_frame_blue"/> <!-- srcは仮 -->
                <!--失敗画像の例-->
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginTop="20dp"

                        android:src="@drawable/drive_license_fail_pattern"/>
                <!--撮影し直すボタン-->
                <jp.co.polarify.onboarding.sdk.view.SafetyButton
                        android:id="@+id/front_retake_button_id"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:textSize="@dimen/button_font_size"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/request_retake_color"
                        android:text="@string/document_photo_retake"
                        android:background="@drawable/request_retake_button"
                        android:visibility="gone"/>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/dotted_line"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">

                <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/oval_background"
                        android:text="@string/drive_license_diagonal"
                        android:textColor="@color/white"/>
                <!--取得した画像-->
                <ImageView
                        android:id="@+id/captured_photo_license_tilted"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="54dp"
                        android:layout_marginEnd="54dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/drive_license_frame_blue"/> <!-- srcは仮 -->
                <!--失敗画像の例-->
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/drive_license_fail_pattern_diagonal"/>
                <!--撮影し直すボタン-->
                <jp.co.polarify.onboarding.sdk.view.SafetyButton
                        android:id="@+id/oblique_retake_button_id"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:textSize="@dimen/button_font_size"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/request_retake_color"
                        android:text="@string/document_photo_retake"
                        android:background="@drawable/request_retake_button"
                        android:visibility="gone"/>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/dotted_line"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">

                <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/oval_background"
                        android:text="@string/drive_license_back"
                        android:textColor="@color/white"/>
                <!--取得した画像-->
                <ImageView
                        android:id="@+id/captured_photo_license_back"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="54dp"
                        android:layout_marginEnd="54dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/drive_license_frame_blue"/> <!-- srcは仮 -->
                <!--失敗画像の例-->
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:src="@drawable/drive_license_fail_pattern"/>
                <!--撮影し直すボタン-->
                <jp.co.polarify.onboarding.sdk.view.SafetyButton
                        android:id="@+id/back_retake_button_id"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/button_font_size"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/request_retake_color"
                        android:text="@string/document_photo_retake"
                        android:background="@drawable/request_retake_button"
                        android:visibility="gone"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="100dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <View
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@color/request_button_back_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <jp.co.polarify.onboarding.sdk.view.SafetyButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/request_button"
                    android:text="@string/start_request"
                    android:background="@drawable/next_button_design"
                    android:textStyle="bold"
                    android:textSize="@dimen/button_font_size"
                    android:textColor="@color/white"/>
        </FrameLayout>
        <ProgressBar
                android:id="@+id/waitting_progress_bar_id"
                style="@android:style/Widget.ProgressBar.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="invisible"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
